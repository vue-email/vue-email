{
  "name": "@vue-email/components",
  "version": "0.0.1",
  "description": "A collection of all components Vue Email.",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external vue",
    "clean": "rm -rf dist",
    "dev": "tsup src/index.ts --format esm,cjs --dts --external vue --watch",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vue-email/vue-email.git",
    "directory": "packages/components"
  },
  "keywords": [
    "vue",
    "email"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@vue-email/body": "0.0.2",
    "@vue-email/button": "0.0.1",
    "@vue-email/column": "0.0.1",
    "@vue-email/container": "0.0.1",
    "@vue-email/render": "workspace:*"
  },
  "peerDependencies": {
    "vue": "^3.4.29"
  },
  "devDependencies": {
    "tsconfig": "workspace:*",
    "typescript": "5.1.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
