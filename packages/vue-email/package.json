{
  "name": "vue-email",
  "version": "0.3.0",
  "description": "ðŸ’Œ Write email templates with Vue",
  "author": {
    "name": "David Arenas",
    "url": "https://github.com/Dave136/"
  },
  "keywords": [
    "vue",
    "vue 3",
    "email",
    "components",
    "html",
    "template"
  ],
  "files": [
    "lib",
    "src",
    "volar.d.ts",
    "nuxt.js",
    "nuxt.plugin.js",
    "README.md"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "dev": "vite build --watch",
    "build": "pnpm generate && vite build",
    "build:prod": "pnpm build && pnpm gen-types",
    "build:only": "vite build",
    "generate": "pnpm gen-version",
    "gen-types": "vue-tsc --declaration --emitDeclarationOnly -p tsconfig.vitest.json --composite false",
    "gen-version": "node .scripts/gen-version.js",
    "test": "pnpm test:unit",
    "test:unit": "vitest --environment jsdom",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress open'",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress run'",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false"
  },
  "peerDependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^5.0.5",
    "@cypress/vue": "^5.0.5",
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node20": "^1.0.2",
    "@types/html-to-text": "^9.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20",
    "@types/pretty": "^2.0.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vitest/ui": "^0.33.0",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.4.0",
    "clean-css": "^5.3.2",
    "cypress": "^12.17.1",
    "eslint": "^8.44.0",
    "eslint-plugin-cypress": "^2.13.3",
    "html-to-text": "^9.0.5",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.25",
    "pretty": "^2.0.0",
    "start-server-and-test": "^2.0.0",
    "tw-to-css": "^0.0.11",
    "typescript": "~5.1.6",
    "vite": "^4.4.2",
    "vitest": "^0.33.0",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.4"
  },
  "browserslist": [
    "> 1%",
