{
  // "extends": "./docs/.nuxt/tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "csstype",
      "vitest",
      "vitest/globals",
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "vue-email": [
        "./src/index"
      ],
      "vue-email/nuxt": [
        "./src/nuxt/module"
      ],
    }
  },
  "include": [
    "./env.d.ts",
    "docs/**/*",
    "src/**/*",
    "tests/**/*",
    "docs/**/*",
    "playgrounds/**/*"
  ],
  "exclude": [
    "../dist",
    "../.output"
  ],
  // "vueCompilerOptions": {
  //   "plugins": [
  //     "pinceau/volar"
  //   ]
  // }
}
